<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/menu_nav"
        app:layout_constraintTop_toTopOf="parent"
        >

    </FrameLayout>




    <com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/menu_nav"
        style="@style/BottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/bottom_navigation"
        ></com.google.android.material.bottomnavigation.BottomNavigationView>

    <ImageButton
        android:id="@+id/btn_mensaje"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="325dp"
        android:layout_marginTop="40dp"
        android:background="#FFF3F3"
        android:contentDescription="Notificacion"
        android:src="@drawable/ic_campana" />

    <ImageButton
        android:id="@+id/btn_noti"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="40dp"
        android:background="#FFF3F3"
        android:contentDescription="Notificacion"
        android:src="@drawable/ic_comentario" />

    <TextView
        android:id="@+id/ubicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="364dp"
        android:text="¿Qué es lo que estás buscando?"
        android:textFontWeight="800"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/titulo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="220dp"
        android:text="Mis mascotas"

        android:textFontWeight="600"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"

        android:layout_marginTop="120dp"
        android:text="Hola,"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="160dp"
        android:text="Rosario C."
        android:textColor="#E22727"
        android:textFontWeight="600"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="80sp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="48dp"
        android:contentDescription="foto_perfil"
        android:src="@mipmap/perfil_1">

    </ImageView>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="252dp"
        android:src="@mipmap/foto_mascota_1"
        android:contentDescription="foto_captura_1" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="252dp"
        android:src="@mipmap/agregar_1"
        android:contentDescription="foto_captura_2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="252dp"
        android:contentDescription="foto_captura_3"
        android:src="@mipmap/agregar_1"/>

    <ImageButton
        android:id="@+id/imageButton2"

        android:layout_width="160sp"
        android:layout_height="105sp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="404dp"
        android:layout_marginEnd="46dp"
        android:background="#FFFFFF"
        android:contentDescription="salud"
        android:src="@mipmap/salud" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="160sp"
        android:layout_height="105sp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="404dp"
        android:background="#FFFFFF"
        android:src="@mipmap/aseo"
        android:contentDescription="aseo" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="160sp"
        android:layout_height="105sp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="508dp"
        android:background="#FFFFFF"
        android:src="@mipmap/deporte"
        android:contentDescription="deporte" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="160sp"
        android:layout_height="105sp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="508dp"
        android:layout_marginEnd="46dp"
        android:background="#FFFFFF"
        android:contentDescription="compras"
        android:src="@mipmap/compras" />

</RelativeLayout>